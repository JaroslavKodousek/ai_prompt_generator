# =============================================================================
# API Keys - Get your key from the provider's website
# =============================================================================

# OpenRouter (RECOMMENDED - 100+ models, many FREE!)
# Get key: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_key_here

# Google Gemini (Alternative)
# Get key: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GOOGLE_API_KEY=your_google_api_key_here

# Anthropic Claude (Alternative)
# Get key: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-api03-your_anthropic_key_here

# =============================================================================
# Model Configuration
# =============================================================================

# OpenRouter Model Selection (see all: https://openrouter.ai/models)
# FREE models (recommended to start):
OPENROUTER_MODEL=google/gemini-2.0-flash-exp:free
# OPENROUTER_MODEL=meta-llama/llama-3.2-3b-instruct:free
# OPENROUTER_MODEL=meta-llama/llama-3.2-1b-instruct:free

# Paid models (higher quality, costs money):
# OPENROUTER_MODEL=anthropic/claude-3.5-sonnet
# OPENROUTER_MODEL=openai/gpt-4o
# OPENROUTER_MODEL=google/gemini-flash-1.5

# Model parameters
MAX_TOKENS=4096
TEMPERATURE=0.0

# =============================================================================
# Performance Configuration
# =============================================================================

# Rate Limiting (adjust based on your API limits)
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_SECONDS=0.5

# Logging
LOG_LEVEL=INFO
